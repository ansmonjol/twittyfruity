<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :username,input_html: {class: "textarea_edit"} %>
    <br>
    <%= f.input :avatar,input_html: {class: "textarea_edit"}, hint: " (entrez l'url d'une image)" %>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
    <% end %>
    <br><br>

    <%= f.input :password, autocomplete: "off", hint: " (Laisser vide si vous ne voulez pas en changer)", required: false,input_html: {class: "textarea_edit"} %><br><br>
    <%= f.input :password_confirmation, required: false,input_html: {class: "textarea_edit"} %><br><br>
    <%= f.input :current_password, hint: " (Entrez votre password pour confirmer les changements)", required: true,input_html: {class: "textarea_edit"} %><br><br>  
  </div>

  <hr>

  <div class="form-actions">
    <%= f.button :submit, "Update", class: 'post_fruit' %>
  </div>
<% end %>
<br><br><br>
<h3>Cancel my account</h3>

<p>Unhappy?</p>
<p><%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "post_back" %></p>
<br><br><br>
<%= link_to "Back", :back, class: 'post_fruit' %>
