<h1>Liste de vos fruitos !</h1>

<br>
<!-- Action -->
<% if current_user == @user %>
  <%= link_to 'New fruit', new_user_tweet_path(current_user) %>
<% end %>
<br>
<br>
<br>
<br>  
<%= @tweets.find_each do |tweet| %>
<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title"><%= link_to "#{tweet.user.username}".capitalize , user_path(tweet.user) %></h3> at <%= tweet.created_at %>
  </div>
  <div class="panel-body">
    <%= tweet.message %>
  </div>
</div>
<br>
<% end %>
