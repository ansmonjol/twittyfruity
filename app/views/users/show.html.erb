<!-- Follow -->
<% if current_user != @user %>
  <% if current_user.follow?(@user) %>
    <%= link_to 'Unfollow', user_unfollow_path(@user), method: :post, class: "btn btn-warning" %>
  <% else %>
    <%= link_to 'Follow', user_follow_path(@user), method: :post, class: "btn btn-primary" %>
  <% end %>
<% end %>

<div>
  <div class="col1">
    <div class="profile_bloc">
      <div class="profile_bloc_pic"><%= image_tag @user.avatar %></div>
      <div class="profile_bloc_infos">
        <div class="profile_bloc_name"><h1><%= @user.username.capitalize %></h1></div>
        <div class="profile_bloc_stat">
          <div class="profile_bloc_stat_label">Tweets</div>
          <div class="profile_bloc_stat_number"><%= @user.tweets.count %></div>
        </div>
        <div class="profile_bloc_stat">
          <div class="profile_bloc_stat_label">Following</div>
          <div class="profile_bloc_stat_number"><%= @user.following.count %></div>
        </div>
        <div class="profile_bloc_stat">
          <div class="profile_bloc_stat_label">Followers</div>
          <div class="profile_bloc_stat_number"><%= @user.followers.count %></div>
        </div>
      </div>
    </div>
  </div>
  
  <div class="col2">
    <div class="feed"><!-- List-->
      <%= @tweets.find_each do |tweet| %>
      <div class="tweet">
        <div class="tweet_pic1"><%= image_tag tweet.user.avatar %></div>
        <span class="tweet_name"><%= link_to "#{tweet.user.username}".capitalize, user_path(tweet.user)%></span><span class="tweet_username">@curtis</span><span class="tweet_date"><%= time_ago_in_words tweet.created_at %></span>
        <span class="tweet_content" style="color: black;">
          <%= tweet.message %>
        </span>
        <a href="#" class="tweet_retweet">2</a>
      </div>
      <% end %>
    </div> 
  </div>
</div>