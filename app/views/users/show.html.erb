<!-- <h2>Page de <%= @user.username %></h2> -->

<!-- Follow -->
<% if current_user != @user %>
  <% if current_user.follow?(@user) %>
    <%= link_to 'Unfollow', user_unfollow_path(@user), method: :post, class: "btn btn-warning" %>
  <% else %>
    <%= link_to 'Follow', user_follow_path(@user), method: :post, class: "btn btn-primary" %>
  <% end %>
  <% end %>

<div>
    <div class="col1">
      <div class="profile_bloc">
        <div class="profile_bloc_pic"></div>
        <div class="profile_bloc_infos">
          <div class="profile_bloc_name"><h1><%= current_user.username.capitalize %></h1></div>
          <!--<div class="profile_bloc_username">@thomlemee</div>-->
          <div class="profile_bloc_stat">
            <div class="profile_bloc_stat_label">Tweets</div>
            <div class="profile_bloc_stat_number"><%= @user.tweets.count %></div>
          </div>
          <div class="profile_bloc_stat">
            <div class="profile_bloc_stat_label">Following</div>
            <div class="profile_bloc_stat_number"><%= @user.following.count %></div>
          </div>
          <div class="profile_bloc_stat">
            <div class="profile_bloc_stat_label">Followers</div>
            <div class="profile_bloc_stat_number"><%= @user.followers.count %></div>
          </div>
        </div>
      </div>
    </div>

    <div class="col2">
      <!--<div class="post_fruit">

        <textarea placeholder="What's up dude ?"></textarea>

        <input type="submit" value="Post a fruit" />

      
      </div>-->

      <div class="feed"><!-- List-->
        <%= @tweets.find_each do |tweet| %>
        <div class="tweet">
          <div class="tweet_pic1"></div>
            <span class="tweet_name"><%= current_user.username.capitalize %></span><span class="tweet_username">@curtis</span><span class="tweet_date"><%= time_ago_in_words tweet.created_at %></span>
            <span class="tweet_content">
              <%= tweet.message %>
          </span>
          <a href="#" class="tweet_retweet">2</a>
        </div>
        <% end %>
      </div> 
    </div>
  </div>





